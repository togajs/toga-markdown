{
  "name": "toga-markdown",
  "version": "0.2.0",
  "description": "A Markdown formatter for Toga documentation.",
  "keywords": [
    "togaplugin",
    "formatter",
    "markdown"
  ],
  "homepage": "https://github.com/togajs/toga-markdown",
  "bugs": "https://github.com/togajs/toga-markdown/issues",
  "license": "MIT",
  "author": "Shannon Moeller <me@shannonmoeller.com> (http://shannonmoeller.com)",
  "main": "dist/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/togajs/toga-markdown.git"
  },
  "dependencies": {
    "marked": "^0.3.3",
    "mtil": "^0.1.3",
    "through2": "^0.6.5",
    "traverse": "^0.6.6"
  },
  "devDependencies": {
    "babel": "^5.2.17",
    "coveralls": "^2.11.2",
    "eslint": "^0.20.0",
    "expect": "^1.6.0",
    "isparta": "^3.0.3",
    "mocha": "^2.2.4",
    "nodemon": "^1.3.7",
    "tunic": "^0.3.0",
    "vinyl-fs": "^1.0.0"
  },
  "scripts": {
    "all": "npm run lint && npm run test && npm run build",
    "build": "babel src --out-dir dist",
    "coveralls": "cat ./coverage/lcov.info | coveralls",
    "lint": "eslint src/*.js test/*.js",
    "test": "babel-node ./node_modules/.bin/isparta cover --include src/*.js ./node_modules/.bin/_mocha -- test/*.js",
    "watch": "nodemon --exec 'npm run test' --watch src --watch test"
  }
}
